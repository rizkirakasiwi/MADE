<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_widget_item"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/img_widget_banner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="8dp"
        android:layout_gravity="center|left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_widget_judul"
            style="@style/textview_header"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="8dp"
                android:id="@+id/txt_widget_rating"
                style="@style/textview_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_widget_language"
                style="@style/textview_standard"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_widget_genre"
            style="@style/textview_standard"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>